<h1>Create new To Do</h1>

<form action="/createToDo" method="post">
  <label>
    Name
    <input type="text" name="name">
  </label>

  <label>
    Description
    <input type="text" name="description">
  </label>

  <label>
    Completed?
    <input type="text" name="completed">
  </label>

  <button type="submit">Create</button>
</form>

{{!-- Render all my To Do's data --}}
<ul>
  {{#each todos as |todo|}}
  <li>
    {{ todo.name }} || description: {{ todo.description }} || completed: {{ todo.completed }}
  </li>
  {{/each}}
</ul>
